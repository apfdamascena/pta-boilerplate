{
   "compilerOptions": {
     "target": "es2017",
     "module": "commonjs",
     "lib": [
       "es6"
     ],
     "allowJs": true,
     "outDir": "./dist",
     "rootDir": "./",
     "esModuleInterop": true,
     "resolveJsonModule": true,
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true,
     "skipLibCheck": true,
     "forceConsistentCasingInFileNames": true,
     "baseUrl": ".",
     "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"]
    }

   },
 }